{
    "data_path": "data/palettes_descriptions.xlsx",
    "test_size": 0.1,
    "num_topics": 50,
    "embedding_dim": 32,
    "hidden_dim": 128,
    "dropout": 0.1,
    "max_features": 2000,
    "batch_size": 64,
    "epochs": 100,
    "lr": 0.001,
    "weight_decay": 1e-05,
    "kl_weight": 0.01,
    "score_weight": 1.0,
    "early_stopping": 10,
    "lr_scheduler_patience": 5,
    "lr_scheduler_factor": 0.5,
    "save_dir": "models",
    "output_dir": "outputs",
    "log_interval": 10,
    "eval_interval": 5,
    "save_separate": true,
    "device": "cuda",
    "seed": 42
}